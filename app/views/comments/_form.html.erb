



<%= form_for @comment,  class:"form-horizontal" do |form| %>


  <div class="form-group">
      <div class=col-sm-10>
      <fieldset>
        <%= form.label :comment_string %>
        <%= form.text_area :comment_string, id: :comment_comment_string %>
      </fieldset>
    </div>
  </div>



  <div class="form-group">
    <div class="col-sm-10">
      <br><%= form.submit  'submit', class:"btn btn-primary" %>
    </div>
  </div>

<% end %>
