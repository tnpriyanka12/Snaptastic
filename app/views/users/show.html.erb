<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Profile pic:</strong><br>
  <%= cl_image_tag @user.profile_pic %>
</p>
<hr>

<% if @current_user %>
  <strong>Your Snaps:</strong><br>

    <% @user.snaps.each do |s| %>
    <%= cl_image_tag s.snap %><br>

                <strong> <%= s.comments.length %> Comments:</strong><br/>

                    <% s.comments.each do |c| %>
                    <%= c.comment_string %><br/>
                    <% end %>
    <hr/>
    <% end %>


<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
