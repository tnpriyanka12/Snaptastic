<!DOCTYPE html>
<html>
  <head>
    <title>Snaptastic</title>
    <%= favicon_link_tag 'favicon.ico' %>
    <link href="https://fonts.googleapis.com/css?family=Poiret+One" rel="stylesheet">
    <meta name="theme-color" content="#ffffff">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= cloudinary_js_config %>
  </head>

  <body class="<%= controller.controller_name %> <%= controller.action_name %>">
    <header>
    <div class="row text-center">
      <!-- <img class="logo" src="/assets/logo/logo.png" /> -->
    </div>
    </header>
    <% if @current_user.present? %>
    <h2> Welcome, <%= @current_user.name %> </h2>
      <h3><%= link_to 'Click to See Your Profile', @current_user , class: "welcomeuser"%></h3>
      <%= link_to 'Logout', login_path, method: :delete %>
    <% else %>
      <%= link_to 'Login', login_path %>
    <% end %>

    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <!-- <a class="navbar-brand" href="<%= root_path %>">SNAPTATISTIC
          </a><img class="snaptastic" src="/assets/snaptastic.png"> -->
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav">
            <li class="active"><a href="<%= root_path %>">Home</a></li>
            <li class="active"><a href="<%= root_path %>">Take Snap</a></li>
            <% if @current_user %>
            <li class="active"><a href="<%= @current_user %>"><%= link_to 'Profile', @current_user , class: "welcomeuser"%></a>Profile</li>
            <% else %>
            <li class="active"><a href="<%= new_user_path %>">SignUp</a></li>
            <% end %>

            <li class="active"><a href="<%= snaps_path %>">Gallery</a></li>
            <!-- <li><a href="#">EXTRA</a></li> -->
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="<%= login_path %>"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
            <li><a href="<%= login_path %>"><span class="glyphicon glyphicon-log-in"></span> LogOut</a><%= link_to '', login_path, method: :delete %></li>

          </ul>
        </div>
      </div>
    </nav>


    <%= yield %>
  </body>
</html>
